<script type="text/javascript">
    var locations = [
      {% if position %}
    {% for lat in position %}
    ['<b>Case No:</b> {{lat.case_number}}<br /><b>Date:</b> {{lat.crime_date}}<br/ ><b>Type:</b> {{lat.type_of_crime}}', {{ lat.position }},  {{lat.case_number}}],
    {% endfor %}
{% else %}
    [28.4551918808319,77.02973962457577],
{% endif %}
    ];
    var iconBase = '/static/map/';

    var map = new google.maps.Map(document.getElementById('map'), {
      zoom:12,
      center: new google.maps.LatLng(28.4551918808319,77.02973962457577),
      icon : iconBase + 'bomb.png',
      mapTypeId: google.maps.MapTypeId.ROADMAP
    });
var marker = new google.maps.Marker({
	  position: {lat: 28.4551918808319,lng: 77.02973962457577},
	    map: map,
	      icon: iconBase + 'bomb.png'
});

    var infowindow = new google.maps.InfoWindow();

    var marker, i;

    for (i = 0; i < locations.length; i++) { 
      marker = new google.maps.Marker({
        position: new google.maps.LatLng(locations[i][1], locations[i][2]),
        map: map
      });

      google.maps.event.addListener(marker, 'click', (function(marker, i) {
        return function() {
          infowindow.setContent(locations[i][0]);
          infowindow.open(map, marker);
        }
      })(marker, i));
    }
  </script>
